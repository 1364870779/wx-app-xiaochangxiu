.coupon-container {
  display: flex;
  flex-direction: column;
  height: 225rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.left-image image {
  width: 100%;
  height: 225rpx;
}

.mall_coupon_ab {
  height: 225rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  top: -100rpx;
}

.mall_coupon_ab .value {
  text-align: center;
  height: 225rpx;
  line-height: 200rpx;
  width: 35%;
  font-size: 56rpx;
  color: #fff;
}

.mall_coupon_more {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 30rpx;
  font-size: 35rpx;
  line-height: 47rpx;
  height: 225rpx;
}

.mall_coupon_more .grey {
  color: #999;
}

page {
  background-color: #f4f4f4;
}