.profile-button-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.profile-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 188rpx;
  height: 130rpx;
}

.profile-button image {
  width: 36rpx;
  height: 36rpx;
}

.profile-button text {
  font-size: 25rpx;
}
