/* 绑定手机号的两个form */
.check {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  height: 110rpx;
}

.check text {
  width: auto;
}

.check input {
  padding-left: 10rpx;
  border: 1rpx solid #66B2FF;
  height: 70rpx;
  width: 280rpx;
  font-size: 34rpx;
}

.check button {
  width: 220rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
